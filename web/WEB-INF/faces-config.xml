<?xml version='1.0' encoding='UTF-8'?>
<faces-config version="2.2"
              xmlns="http://xmlns.jcp.org/xml/ns/javaee"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd">
    
    <application>
        <locale-config>
            <default-locale>fr</default-locale>
            <supported-locale>fr</supported-locale>
        </locale-config>
        <resource-bundle>
            <base-name>ch.hearc.ig.odi.moviemanager.presentation.bundle.Messages</base-name>
            <var>msg</var>
        </resource-bundle>
    </application>
     
    
    <navigation-rule>
        <from-view-id>*.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>personsList</from-outcome>
            <to-view-id>/personsList.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    
    <navigation-rule>
        <from-view-id>/index.xhtml</from-view-id>
        <navigation-case>
            <from-action>#{personDetailsBean.recupPerson(person)}</from-action>          
            <from-outcome>0</from-outcome>
            <to-view-id>/personDetails.xhtml</to-view-id>
            <redirect />
        </navigation-case>
        <navigation-case>
            <from-action>#{personDetailsBean.recupPerson(person)}</from-action>          
            <from-outcome>1</from-outcome>
            <to-view-id>/peopleList.xhtml</to-view-id>
            <redirect />
        </navigation-case>
    </navigation-rule>
    
    <navigation-rule>
        <from-view-id>/personDetails.xhtml</from-view-id>
        <navigation-case>
            <from-action>#{movieDetailsBean.recupMovie(movie)}</from-action>          
            <from-outcome>0</from-outcome>
            <to-view-id>/movieDetails.xhtml</to-view-id>
            <redirect />
        </navigation-case>
        <navigation-case>
            <from-action>#{movieDetailsBean.recupMovie(movie)}</from-action>          
            <from-outcome>1</from-outcome>
            <to-view-id>/peopleList.xhtml</to-view-id>
            <redirect />
        </navigation-case>
    </navigation-rule>

</faces-config>
